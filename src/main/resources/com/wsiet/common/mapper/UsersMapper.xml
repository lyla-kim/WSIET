<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wsiet.common.mapper.UsersMapper">

	<insert id="insertUser">
		INSERT INTO "USER" (USER_ID, PW, USER_NAME, USER_PHON, EMAIL, ADDRESS1, ADDRESS2, ADDRESS3, CODE_ID, STATUS, NOSHOW, REGDATE, UPDDATE) 
			VALUES(#{user_id}, #{pw}, #{user_name}, #{user_phone}, #{email}, #{address1}, #{address2}, #{address3}, 'C1001', 0, 0, sysdate, sysdate)
	</insert>
	
	<select id="idCheck" parameterType="String" resultType="integer">
		SELECT count(*) FROM "USER" WHERE user_id= #{user_id}
	</select>
	
	<select id="login" resultType="com.wsiet.common.domain.UserVO">
		SELECT USER_ID, PW, USER_NAME, USER_PHON, EMAIL, ADDRESS1, ADDRESS2, ADDRESS3, CODE_ID, STATUS, NOSHOW, REGDATE, UPDDATE
		FROM "USER"
		where user_id = #{user_id}
	</select>
	
	<resultMap type="com.wsiet.common.domain.UserVO" id="adminMap">
		<id property="user_id" column="user_id" />
		<result property="user_id" column="user_id" />
		<result property="pw" column="pw" />
		<result property="user_name" column="user_name" />
		<result property="user_phone" column="user_phone" />
		<result property="email" column="email" />
		<result property="address1" column="address1" />
		<result property="address2" column="address2" />
		<result property="address3" column="address3" />
		<result property="code_id" column="code_id" />
		<result property="status" column="status" />
		<result property="noShow" column="noShow" />
		<result property="regdate" column="regdate" />
		<result property="upddate" column="upddate" />
		<collection property="authList" resultMap="authMap">
		</collection>
	</resultMap>
	
	<resultMap type="com.wsiet.common.domain.AuthVO" id="authMap">
		<result property="user_id" column="user_id" />
		<result property="code_id" column="code_id"/>
	</resultMap>
	
	<select id="read" resultMap="adminMap">
	<![CDATA[
	SELECT USER_ID, PW, USER_NAME, USER_PHON, EMAIL, ADDRESS1, ADDRESS2, ADDRESS3, CODE_ID, STATUS, NOSHOW, REGDATE, UPDDATE
	FROM "USER"
	where user_id = #{user_id}
	]]>
	</select>
	
</mapper>